<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BetaProyecto.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="BetaProyecto.Views.WindowsRising.ViewSobreNosotros"
             x:DataType="vm:ViewSobreNosotrosViewModel" 
             Background="{DynamicResource Brush_PanelUser_Fondo}"
             AutomationProperties.Name="{DynamicResource Acc_Sobre_Pagina}">

    <UserControl.Styles>
        <Style Selector="Button.GitHubBtn">
            <Setter Property="Background" Value="{DynamicResource Brush_Sobre_BtnGitHub_Fondo}"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.GitHubBtn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource Brush_Sobre_BtnGitHub_Hover_Fondo}"/>
        </Style>

        <Style Selector="Button.VolverSobre">
            <Setter Property="Background" Value="{DynamicResource Brush_Sobre_BtnVolver_Fondo}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush_Sobre_BtnVolver_Texto}"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.VolverSobre:pointerover /template/ ContentPresenter">
             <Setter Property="Background" Value="{DynamicResource Brush_Sobre_BtnVolver_Hover_Fondo}"/>
             <Setter Property="Foreground" Value="{DynamicResource Brush_Sobre_BtnVolver_Texto}"/>
        </Style>
    </UserControl.Styles>

    <Viewbox Stretch="Uniform">
        <Grid Width="2300" Height="1300">
            <Border Background="{DynamicResource Brush_Sobre_Fondo_Tarjeta}"
                    BorderBrush="{DynamicResource Brush_Sobre_Borde_Tarjeta}"
                    BorderThickness="1"
                    Width="1400" Height="1000"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto, Auto, Auto, *">
                    <TextBlock Text="{DynamicResource Sobre_Titulo}" Grid.Row="0" FontSize="90" FontWeight="Bold" Foreground="{DynamicResource Brush_Sobre_Texto_Principal}" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,150,0,0"/>
                    <TextBlock Text="{DynamicResource Sobre_Programador}" Grid.Row="1" FontSize="50" Foreground="{DynamicResource Brush_Sobre_Texto_Principal}" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,20,0,0"/>
                    <Path Fill="{DynamicResource Brush_Sobre_Texto_Principal}" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" Width="400" Height="440" Margin="0,50,0,0" Data="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" AutomationProperties.Name="{DynamicResource Acc_Sobre_Logo}"/>
                    
                    <Button Grid.Row="3"
                            Classes="GitHubBtn"
                            Command="{Binding BtnAbrirGitHub}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,30,0,0"
                            AutomationProperties.HelpText="{DynamicResource Acc_Sobre_BtnGitHub_Help}">
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <Path Data="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                                  Fill="{DynamicResource Brush_Sobre_BtnGitHub_Texto}" 
                                  Width="40" Height="40" Stretch="Uniform"/>
                            
                            <TextBlock Text="{DynamicResource Sobre_BtnGitHub}" 
                                       FontSize="30" FontWeight="Bold" 
                                       Foreground="{DynamicResource Brush_Sobre_BtnGitHub_Texto}" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Button Classes="VolverSobre"
                Content="{DynamicResource VisorUser_BtnVolver}"
                Command="{Binding btnVolverAtras}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,50,50"
                AutomationProperties.Name="{DynamicResource Global_BtnVolver}"
                AutomationProperties.HelpText="{DynamicResource Acc_Btn_Volver_Help}"/> 
        </Grid>
    </Viewbox>
</UserControl>