<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BetaProyecto.App"
             xmlns:local="using:BetaProyecto"
             RequestedThemeVariant="Default">
             <!-- Aqui tendremos los diccionaros por defecto de la app -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Assets/Styles/FuenteLexend.axaml"/>
                <ResourceInclude Source="/Assets/Interfaces/ModoClaro.axaml"/>
                <ResourceInclude Source="/Assets/Language/Spanish.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <!-- Paquete prefabricado que tiene avalonia (Botones mas modernos...)-->
        <FluentTheme />
        <!-- Nuestros estilos personalizados por que en los anteriores diccionarios en algunos casos
        por ejemplo en flyout no se aplicaban,además en casos como los combox que siempre son 
        iguales hacemos ahorrarnos aplicarles los diccionarios cada vez que aparecen a solo una vez-->
        <StyleInclude Source="/Assets/Styles/EstilosGlobales.axaml"/>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

</Application>