    <AvaloniaXaml Remove="Assets\Styles\EstilosGlobales.axaml" />
    <AvaloniaXaml Remove="Assets\Styles\FuenteArial.axaml" />
    <AvaloniaXaml Remove="Assets\Styles\FuenteCarlito.axaml" />
    <AvaloniaXaml Remove="Assets\Styles\FuenteGloriaHallelujah.axaml" />
    <AvaloniaXaml Remove="Assets\Styles\FuenteLexend.axaml" />
    <AvaloniaXaml Remove="Assets\Styles\FuenteOpenSans.axaml" />
    <AvaloniaXaml Remove="Assets\Styles\FuenteRoboto.axaml" />
